            android:exported="false"
            android:label="@string/title_adjust_comparison_settings"
            android:theme="@style/Theme.JobCompare6300" />
        <activity
            android:name=".ComparisonViewActivity"
            android:exported="false"
            android:label="@string/title_comparison_view"
            android:theme="@style/Theme.JobCompare6300" />
